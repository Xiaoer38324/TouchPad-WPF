<Window x:Class="WpfApp1.Editor_Setting"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:input="clr-namespace:System.Windows.Input;assembly=PresentationCore"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Editor_Setting" Height="123" Width="171" Closing="Window_Closing" WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2.5*"/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>
        <CheckBox x:Name="Enableattach" Content="磁吸" HorizontalAlignment="Left" VerticalAlignment="Center" Height="15" Width="44"/>
        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="网格细分:" VerticalAlignment="Center" Grid.Row="1"/>
        <TextBox x:Name="GridNumber" HorizontalAlignment="Left" Margin="56,0,0,0" Grid.Row="1" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Center" Width="115"/>
        <TextBox x:Name="SizeWidth" HorizontalAlignment="Left"  Grid.Row="2" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Center" Width="50" Margin="56,0,0,0"/>
        <TextBox x:Name="SizeHeight" HorizontalAlignment="Left"  Grid.Row="2" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Center" Width="50" Margin="121,0,0,0"/>
        <Button x:Name="OK" Content="确定" Grid.Row="4" VerticalAlignment="Top" Click="OK_Click"/>
        <Button x:Name="BackGroundChange" Content="更换背景" Grid.Row="3" VerticalAlignment="Top" Click="BackGround_Click"/>
        <TextBlock HorizontalAlignment="Left" Grid.Row="2" TextWrapping="Wrap" Text="画布尺寸：" VerticalAlignment="Center"/>
        <TextBlock Margin="106,1,50,43" Grid.Row="2" TextWrapping="Wrap" Text=":" Width="15" Grid.RowSpan="2" TextAlignment="Center"/>

    </Grid>
</Window>
