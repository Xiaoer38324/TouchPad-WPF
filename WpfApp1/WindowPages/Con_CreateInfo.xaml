<Window x:Class="WpfApp1.Con_CreateInfo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="生成控件" Height="255" Width="443" WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80*"/>
            <ColumnDefinition Width="363*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="33*"/>
            <RowDefinition Height="80*"/>
        </Grid.RowDefinitions>
        <Label Content="名称:" HorizontalAlignment="Left" Margin="40,29,0,0" VerticalAlignment="Top" Height="25" Width="40"/>
        <TextBox x:Name="_Name" HorizontalAlignment="Left" Margin="5,33,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="233" Height="17" Grid.Column="1"/>
        <Button x:Name="APPLY" Grid.Column="1" Content="应用" HorizontalAlignment="Left" Margin="0,121,0,0" Grid.Row="1" VerticalAlignment="Top" Height="29" Width="238" Click="APPLY_Click"/>
        <ComboBox x:Name="_Type" Grid.Column="1" HorizontalAlignment="Left" Margin="5,0,0,0" Grid.Row="1" VerticalAlignment="Top" Width="233"/>
        <Label Content="类型:" HorizontalAlignment="Left" Margin="40,64,0,0" VerticalAlignment="Top" Grid.RowSpan="2"/>
        <Label Content="备注:" HorizontalAlignment="Left" Margin="40,24,0,0" Grid.Row="1" VerticalAlignment="Top"/>
        <TextBox x:Name="_Reamrk" HorizontalAlignment="Left" Margin="5,32,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="233" Height="78" Grid.Column="1" Grid.Row="1"/>

    </Grid>
</Window>
