<Window x:Class="WpfApp1.WindowPages.FixForLockingMessage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1.WindowPages"
        mc:Ignorable="d"
        Title="FixForLockingMessage" Height="500" Width="500" Loaded="Window_Loaded" Closed="Window_Closed">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Border BorderBrush="#FFFE5E5E" BorderThickness="1" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="0" Width="50" Height="50" Padding="0,1,0,0">
            <Image x:Name="CursorPoint" Height="25" Width="25" Source="/Resource/WindowSelect.png" MouseDown="Image_MouseDown"/>
        </Border>
        <Button Content="全屏窗口点我" Grid.Row="2" Click="Button_Click"/>
        <TextBlock x:Name="WindowTitle" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Text="窗口游戏请拖动上方标志到目标窗口上"/>
        <Button Content="?" HorizontalAlignment="Right" VerticalAlignment="Top" Width="30" Height="30" Click="Button_Click_1"/>
        <Button Content="确定" HorizontalAlignment="Left" VerticalAlignment="Top" Width="30" Height="30" Click="Button_Click_2"/>

    </Grid>
</Window>
